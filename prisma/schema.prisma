generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model MkorUnit {
  id            String      @id @default(cuid())
  name          String
  diameter      Int
  availableFrom DateTime
  segments      String      // JSON: [транзит, разгрузка, работа, погрузка, транзит на ТОИР, ТОИР]
  jobs          MkorJob[]
}

model MkorJob {
  id        String   @id @default(cuid())
  start     DateTime
  customer  String?  // добавлено для заказчика
  lpu       String?  // добавлено для ЛПУ
  customStages Boolean @default(false) // флаг кастомных этапов
  customSegments String? // JSON: кастомные сегменты [транзит, разгрузка, работа, погрузка, транзит на ТОИР, ТОИР]
  mkorUnit  MkorUnit @relation(fields: [mkorUnitId], references: [id], onDelete: Cascade)
  mkorUnitId String
}

model MkorInventory {
  id            String   @id @default(cuid())
  diameter      Int
  count         Int
  availableFrom DateTime
}

model TransportSupply {
  id        String   @id @default(cuid())
  date      DateTime
  tractors  Int
  trailers  Int
  lowLoaders Int
}

model Lpu {
  id        String   @id @default(uuid())
  customer  String
  name      String
  latitude  Float?
  longitude Float?
  @@unique([customer, name], name: "customer_name")
}
